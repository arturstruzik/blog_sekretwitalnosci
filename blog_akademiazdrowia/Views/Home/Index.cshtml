@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<blog_akademiazdrowia.Articles>

<div class="row crop top-article">
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
        <a href="">@Model.Last().Category</a>
        <h1><a href="~/Articles/Details/@Model.Last().ArticleId">@Model.Last().Title</a></h1>
        <p>@Html.Raw(@Model.Last().ShortContent)</p>
    </div>
    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12">
        <img src="~/@Model.Last().ImgPath" alt="sport image" />
    </div>
</div>

